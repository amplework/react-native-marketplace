{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "store/*": ["store/*"],
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "utils/*": ["utils/*"],
      "shared/*": ["shared/*"],
      "routes/*": ["routes/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
